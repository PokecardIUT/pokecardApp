<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/card1"
        android:layout_width="@dimen/adapter_card_list_card_width"
        android:layout_height="@dimen/adapter_card_list_card_height"
        android:layout_marginTop="@dimen/adapter_card_list_card_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/card_hide"
        tools:srcCompat="@mipmap/card_hide" />

    <ImageView
        android:id="@+id/card2"
        android:layout_width="@dimen/adapter_card_list_card_width"
        android:layout_height="@dimen/adapter_card_list_card_height"
        android:layout_marginTop="@dimen/adapter_card_list_card_margin_top"
        app:layout_constraintStart_toEndOf="@id/card1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/card_hide"
        tools:srcCompat="@mipmap/card_hide" />

    <ImageView
        android:id="@+id/card3"
        android:layout_width="@dimen/adapter_card_list_card_width"
        android:layout_height="@dimen/adapter_card_list_card_height"
        android:layout_marginTop="@dimen/adapter_card_list_card_margin_top"
        app:layout_constraintStart_toEndOf="@id/card2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/card_hide"
        tools:srcCompat="@mipmap/card_hide" />

    <TextView
        android:layout_width="@dimen/adapter_card_list_card_width"
        android:layout_height="25dp"
        android:layout_marginTop="@dimen/adapter_card_list_card_margin_top"
        android:text="1"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/card1" />

    <TextView
        android:layout_width="@dimen/adapter_card_list_card_width"
        android:layout_height="25dp"
        android:layout_marginTop="@dimen/adapter_card_list_card_margin_top"
        android:text="3"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/card2" />

    <TextView
        android:layout_width="@dimen/adapter_card_list_card_width"
        android:layout_height="25dp"
        android:layout_marginTop="@dimen/adapter_card_list_card_margin_top"
        android:text="5"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/card3" />
</LinearLayout>